{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "node",
      "@types/node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "config/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "docs/**/*.ts",
    "docs/**/*.tsx",
    "docs/**/*.vue",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue"
  ],
 "exclude": [
    "node_modules",
    "./node_modules",
    "**/*.spec.ts",
    "dist",
    "config",
    "public"
  ]
}
